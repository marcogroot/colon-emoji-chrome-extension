{
  "manifest_version": 3,
  "name": "Colon emoji",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "search/search.html",
    "default_icon": "images/icon-16.png"
  },
  "icons": {
    "16": "images/icon-16.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/startup.js",
        "scripts/content.js",
        "scripts/search.js",
        "scripts/emojis.js"
      ],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["emojis.json"],
      "matches": ["<all_urls>"],
      "extension_ids": []
    }
  ],
  "permissions": ["activeTab", "scripting"]
}
